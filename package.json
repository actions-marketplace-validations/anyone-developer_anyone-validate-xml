{
  "name": "@anyone-developer/anyone-validate-xml",
  "version": "0.9.0",
  "description": "This action help you to validate xml syntax in specified directory. read file recursively with specified file extensions.",
  "main": "dist/index.js",
  "types": "index.d.ts",
  "files": [
    "dist/cli.js",
    "dist/index.js",
    "dist/action.js",
    "index.d.ts"
  ],
  "scripts": {
    "test": "ts-node src/test.ts",
    "xo": "xo",
    "xo-fix": "xo --fix",
    "build": "npm run build-index && npm run build-action && npm run build-cli && npm run build-win && npm run build-macos && npm run build-linux",
    "build-index": "ncc build index.ts -o dist/index.js -m -s --license LICENSE",
    "build-action": "ncc build action.ts -o dist/action.js -m -s --license LICENSE",
    "build-cli": "ncc build cli.ts -o dist/cli.js -m -s --license LICENSE",
    "build-win": "pkg dist/cli.js -t node12-win-x64 -o build/release/anyone-validate-xml-win",
    "build-macos": "pkg dist/cli.js -t node12-macos-x64 -o build/release/anyone-validate-xml-macos",
    "build-linux": "pkg dist/cli.js -t node12-linux-x64 -o build/release/anyone-validate-xml-linux"
  },
  "repository": "git://github.com/anyone-developer/anyone-validate-xml.git",
  "keywords": [
    "cli",
    "anyone-validate-xml",
    "anyone-developer"
  ],
  "author": "Zhang Nan (zhang_nan_163@163.com)",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/anyone-developer/anyone-validate-xml/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "homepage": "https://github.com/anyone-developer/anyone-validate-xml#readme",
  "dependencies": {
    "args": "^5.0.1",
    "chalk": "^4.1.0",
    "fast-xml-parser": "^3.17.4",
    "object-hash": "^2.0.3",
    "rrdir": "^8.2.0",
    "tty-table": "^4.1.3",
    "xml-formatter": "^2.3.1"
  },
  "optionalDependencies": {
    "@actions/core": "^1.2.6"
  },
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "@types/args": "^3.0.0",
    "@vercel/ncc": "^0.24.1",
    "pkg": "^4.4.9",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "xo": "^0.34.1"
  }
}
